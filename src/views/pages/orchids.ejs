<!doctype html>
<html lang="en">
    <%- include('../partials/head.ejs', { title: "Orchids | Orchids Overflow"}) %>
    <body>
        <div class='flex h-screen w-full'>
            <%- include('../partials/sidebar.ejs') %>
            <main class='h-full w-full'>
                <header class='flex h-20 w-full items-center bg-purple-100 p-3 px-16 shadow-md'>
                    <h1 class='text-2xl font-semibold capitalize'>
                        Orchids List
                    </h1>
                </header>
                <div class='p-10 flex flex-col'>
                    <div class='mb-3 flex justify-between'>
                        <input />
                        <button class='rounded-lg bg-purple-500 p-3 text-white'>
                            <a href="/orchids/create">
                                Create
                            </a>
                        </button>
                    </div>
                    <div class="flex-grow mb-3">
                        <table class='min-w-full bg-white'>
                            <thead class='bg-gray-800 text-white'>
                                <tr>
                                    <th class='px-4 py-3 text-left text-sm font-semibold uppercase'>
                                        No.
                                    </th>
                                    <th class='w-1/3 px-4 py-3 text-left text-sm font-semibold uppercase'>
                                        Name
                                    </th>
                                    <th class='w-1/3 px-4 py-3 text-left text-sm font-semibold uppercase'>
                                        Image
                                    </th>
                                    <th class='w-1/3 px-4 py-3 text-left text-sm font-semibold uppercase'>
                                        Price
                                    </th>
                                    <th class='w-1/3 px-4 py-3 text-left text-sm font-semibold uppercase'>
                                        Origin
                                    </th>
                                    <th class='w-1/3 px-4 py-3 text-left text-sm font-semibold uppercase'>
                                        Is Natural
                                    </th>
                                    <th class='w-1/3 px-4 py-3 text-left text-sm font-semibold uppercase'>
                                        Color
                                    </th>
                                    <th class='w-1/3 px-4 py-3 text-left text-sm font-semibold uppercase'>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class='text-gray-700'>
                                <% orchids.data.forEach((element, index) => { %>
                                    <tr>
                                        <td class='px-4 py-3 text-left'>
                                            <%= index %>
                                        </td>
                                        <td class='w-1/3 px-4 py-3 text-left'>
                                            <%= element.name %>
                                        </td>
                                        <td class='w-1/3 px-4 py-3 text-left'>
                                            <img src="<%= element.image %>" alt="<%= element.name %>" class="w-20 h-20" />
                                        </td>
                                        <td class='w-1/3 px-4 py-3 text-left'>
                                            <%= element.price %>
                                        </td>
                                        <td class='w-1/3 px-4 py-3 text-left'>
                                            <%= element.origin %>
                                        </td>
                                        <td class='w-1/3 px-4 py-3 text-left'>
                                            <%= element.isNatural %>
                                        </td>
                                        <td class='w-1/3 px-4 py-3 text-left'>
                                            <%= element.color %>
                                        </td>
                                        <td class='w-1/3 px-4 py-3 text-left relative group'>
                                            <button class="relative">
                                                View
                                            </button>
                                            <div class="absolute hidden group-hover:block">
                                                <a href="/orchids/update/<%= element.id %>">
                                                    <button id="orchid-update" data-id="<%= element.id %>">Update</button>
                                                </a>
                                                <button id="orchid-delete" data-id="<%= element.id %>">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <div class='flex items-center justify-center'>
                        <div class='flex items-center justify-center space-x-4'>
                            <button id="orchids-list-prev" data-page="<%= orchids.meta.page %>" class='cursor-pointer rounded-md border bg-gray-100 px-2 py-1 text-3xl leading-6 text-slate-400 shadow-sm transition hover:bg-gray-200 hover:text-slate-500 disabled:opacity-50 disabled:cursor-not-allowed'>
                                &lt;
                            </button>
                            <div class='text-slate-500'><%= orchids.meta.page + 1 %> / <%= orchids.meta.totalPages %></div>
                            <button id="orchids-list-next" data-page="<%= orchids.meta.page %>" data-total="<%= orchids.meta.totalPages %>" class='cursor-pointer rounded-md border bg-gray-100 px-2 py-1 text-3xl leading-6 text-slate-400 shadow-sm transition hover:bg-gray-200 hover:text-slate-500 disabled:opacity-50 disabled:cursor-not-allowed'>
                                &gt;
                            </button>
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <script src="/script/orchids.js"></script>
    </body>
</html>
