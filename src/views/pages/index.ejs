<!doctype html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
        <link rel="stylesheet" href="/styles/index.css" />
    </head>

    <body id="index">
        <header><%- include('../partials/header.ejs') %></header>
        <main>
            <section class="banner-image">
                <img src="/images/main-banner.jpg" alt="banner-image" />
                <div class="float-text">
                    <h1>Orchids Blog</h1>
                </div>
            </section>
            <section class="main-content container mt-5">
                <div class="row">
                    <div class="main-feed col-8">
                        <ul>
                            <% orchids.data.forEach(orchid => { %>
                                <li>
                                    <div class="card">
                                        <div class="card-body">
                                            <img src="<%= orchid.image %>" alt="<%= orchid.name %>" />
                                            <div class="mt-3">
                                                <h3><%= orchid.name %></h3>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            <% }) %>
                        </ul>
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                              <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                  <span aria-hidden="true">&laquo;</span>
                                </a>
                              </li>
                              <% for( let index = 0; index < orchids.meta.totalPages - 1; index++ ) { %>
                                <li class="page-item"><a class="page-link" href="/?page=<%= currentPage + index %>"><%= index + 1 %></a></li>
                              <% } %>
                              <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                  <span aria-hidden="true">&raquo;</span>
                                </a>
                              </li>
                            </ul>
                          </nav>
                    </div>
                    <div class="sidebar col">
                        <div class="mb-4">
                            <button class="btn btn-primary">Create Category</button>
                            <button class="btn btn-primary">Create Orchid</button>
                        </div>
                        <div class="categories-list mb-4">
                            <h2>Categories</h2>
                            <ul>
                                <% categories.data.forEach(category => { %>
                                <li>
                                    <div class="card">
                                        <div class="card-body d-flex justify-content-between">
                                            <h5 class="card-title"><%= category.name %></h5>
                                            <button>View</button>
                                        </div>
                                    </div>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                        <div>
                            <h2>Popular Orchids</h2>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <!-- <footer><%- include('../partials/footer.ejs') %></footer> -->
    </body>
</html>
